{
    "include": ["./src/**/*"],
    "compilerOptions": {
        "target": "es2020",
        "lib": ["ES2020"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "isolatedModules": true
    }
}
